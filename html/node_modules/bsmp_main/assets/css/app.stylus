html, body
  margin: 0
  padding: 0
  background: #fbfbfb
  font-size: 13px
  width: 100%
  height: 100%

#app
  font-family: 'Microsoft YaHei', 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-align: center
  color: #2c3e50
  padding-top: 45px
  min-width: 800px
  min-height: 100%
  .el-button--primary
    background-color: #2f70bc
    border-color: #fff

.page-container
  position: relative

.page-sidebar
  position: absolute
  top: 0;
  bottom: 0
  width: 200px
  display: block
  &.menu-compact
    width: 45px
    &+.page-content
      margin-left: 45px
      position: relative
    .el-menu-vertical >.el-submenu>.el-menu
        height: 0
        background: #fbfbfb
        position: absolute
        z-index: 120
        left: 45px
        top: 0
        width: 195px
        overflow: hidden
        border-left: 1px solid #f3f3f3
        box-shadow: 5px 5px 5px -5px rgba(0,0,0,.3), 5px 5px 5px -5px rgba(0,0,0,.3), 5px -5px 5px -5px rgba(0,0,0,.3)
    .el-menu>li:hover>.el-menu
      display: block!important
      height: auto
.page-content
  display: block
  margin-left: 200px
  margin-right: 0
  margin-top: 0
  min-height: 100%
  padding: 0
  background: #eee

.query-block .el-form-item
  margin-bottom: 10px
*:before, *:after
  box-sizing: border-box

.demo-form-inline
  overflow: hidden
  input[type='number']
    width: 100px
*
  box-sizing: border-box
  padding: 0
  margin: 0

.label, .badge
  display: inline-block
  font-weight: 300
  text-shadow: none!important

.badge
  min-width: 10px
  line-height: 1
  color: #fff
  font-size: 11px!important
  font-weight: 300
  text-align: center
  background-color: #ccc
  height: 18px
  padding: 3px 6px 3px 6px
  border-radius: 12px!important
  background-clip: padding-box!important
  text-shadow: none!important
  vertical-align: middle

ul, ol
  margin-top: 0
  margin-bottom: 10px

.pull-left
  float: left
.pull-right
  float: right

a
  background: 0 0

img
  vertical-align: middle

.dropdown-menu
  position: absolute
  top: 100%
  left: 0
  z-index: 1000
  display: none
  float: left
  min-width: 160px
  padding: 5px 0
  margin: 2px 0 0
  font-size: 14px
  text-align: left
  list-style: none
  background-color: #fff
  background-clip: padding-box
  border: 1px solid #ccc
  border-radius: 4px
  box-shadow: 0 6px 12px rgba(0,0,0,.175)
  >li>a
    display: block
    padding: 3px 20px
    clear: both
    font-weight: 400
    line-height: 1.42857143
    color: #333
    white-space: nowrap

.container
  text-align: left
  margin-left: 2px
  padding: 6px
  box-shadow: 1px 0 5px 1px rgba(0,0,0,.15)
  font-size: 13px !important
  background-color: #ecedef

  .el-button--mini
      padding: 4px 2px
      font-size: 12px
      border-radius: 4px
   .toolbar .el-button
       margin: 1px 0 3px 0
 .dialog-form
   border: 1px solid #dfe6ec
   border-radius: 4px
   padding: 10px 20px 10px 10px

 .el-transfer-panel
   width: 43% !important

 .el-transfer-panel__body
   margin-bottom: 36px

  .el-dialog--full
    .el-dialog__body
      max-height: none
  
 .el-dialog__body
    max-height: 430px
    overflow-y: auto
    overflow-x: hidden

 .edui-default
    line-height: 20px

.avatar-uploader
  .el-upload
    border: 1px dashed #d9d9d9
    border-radius: 6px
    cursor: pointer
    position: relative
    overflow: hidden
  .el-upload:hover
    border-color: #20a0ff
.avatar-uploader-icon
  font-size: 28px
  color: #8c939d
  width: 100px
  height: 100px
  line-height: 100px !important
  text-align: center
.avatar
  width: 100px
  height: 100px
  display: block

.icon
  display: inline-block
  color: #fff
  font-size: 12px
  line-height: 40px
  margin: 0 10px 0 0
  transition: line-height 0.3s ease

.fade-enter-active, .fade-leave-active
  transition: opacity .3s
.fade-enter, .fade-leave-to
  opacity: 0

.danger-color
  color: #ff4949 !important
.table-sm-btn
  padding: 7px 9px !important

.tac
  text-align: center
  min-height: 100%
  width: 200px
  background: #002140
  box-shadow: 0 0 10px 0 rgba(0,0,0,.2)
  .el-menu-vertical
    display: inline-block
    text-align: left
    background: #002140
    width: 100%
    >li
      position: relative
      display: block
      padding: 0
      margin: 0

  .el-submenu__title
    padding-left: 15px !important
  .el-menu-item-group__title
    height: 0 !important
    padding-top: 0 !important

  .top-menu
    background-color: #002140 !important
    >.el-menu
      background-color: #001529 !important
      box-shadow: inset 0 4px 4px -2px rgba(0,0,0,.15), inset 0 -4px 4px -2px rgba(0,0,0,.15)
      >li>ul
        .el-submenu>.el-menu
          background: #fff
          border-top: 1px solid #eee
          border-bottom: 1px solid #eee
    .icon
      margin-right: 15px

  .el-menu-item-group
    display: block
    padding: 0
    margin: 0
    border: 0
    position: relative
    > ul
      margin-bottom: 0 !important
  .el-menu-item
    padding: 0 10px 0 50px !important

.el-menu-item, .el-submenu__title
  color: #fff !important;
.el-menu-item.is-active 
  background: #3f617f !important;
.el-menu-item, .el-submenu__title
  &:hover 
    background: #48576a !important;

.m-message-box-img
  width: auto !important
  min-width: 420px
  max-height: 100%
  overflow: scroll

  img 
    max-width: 100%

.download-link
  text-decoration: none
  color: #fff

#quill-container
  height: 350px!important

.el-table .selected
  background: #20a0ff !important
  color: #fff

.select-flag
  width: 130px;

.nav-collapse
  text-align left 
  margin 10px 0
  border: none

  .el-collapse-item__header
    background #3e72be
    color #fff
    border-radius: 5px
    position: relative
    height: 30px
    line-height: 30px

    .el-collapse-item__header__arrow
      position: absolute
      right: 10px
      top: 8px
  
  .el-collapse-item__wrap 
    border-bottom: none

.nav-step
  .el-step__head.is-text.is-finish
    background-color: #3e72be
    border-color: #3e72be
  .el-step__title.is-finish
    color #3e72be

.nav-item-form
  .el-form-item
    margin-bottom: 15px !important
  input
    border-radius: 15px
  .el-input-group__append 
    border-top-right-radius: 15px
    border-bottom-right-radius: 15px
  .el-input-group__prepend
    border-top-left-radius: 15px
    border-bottom-left-radius: 15px

.nav-tabs
  text-align left 
  margin 10px 0

  .el-tabs__header
    border-bottom 2px solid #3e72be
    margin: 0
  .el-tabs__item 
    height: 30px
    line-height: 30px
  .el-tabs__header .el-tabs__item.is-active
    background: #3e72be
    color: #fff
  .el-tabs__nav-wrap
    margin-bottom: -3px

  .el-tabs__content
    border-left: 1px solid #ccc
    border-right: 1px solid #ccc
    border-bottom: 1px solid #ccc
    padding 10px
    border-radius: 2px

.el-button
  padding: 5px 10px;